<div class="container px-5 px-sm-0">
  <%= render 'books/error', model: @user %>
  <div class="row">
  <div class="col-md-3">
    <%= render 'users/user', user: @user %>
  <h2>New book</h2>
  <%= form_with model: @book_new, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %>
  <% end %>
  </div>
   <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
          <td>
            <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no-image2.jpg"%>
            <% end %>
            <br><%= link_to @user.name, user_path(@user) %></td>
          <td><%= link_to @book.title, book_path(@book)%></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>

