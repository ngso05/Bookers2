<div class="container px-5 px-sm-0">
  <%= render 'books/error', model: @user %>
  <div class="row">
  <div class="col-md-3">
    <%= render 'users/user', user: @user %>
  <h2>New book</h2>
  <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %>
  <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
  <h2>Books</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no-image2.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>

  </div>
</div>


